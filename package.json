{
  "name": "ImJoy",
  "version": "0.2.4",
  "description": "ImJoy Desktop App (with Plugin Engine)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run package-mac; npm run package-linux64; npm run package-win64",
    "package-mac": "electron-packager . ImJoy --platform=darwin --arch=x64 --icon=./asserts/imjoy --prune=true --out=./build --overwrite",
    "package-win64": "electron-packager . ImJoy --platform=win32 --arch=x64 --icon=./asserts/imjoy --prune=true --out=./build --overwrite",
    "package-linux64": "electron-packager . ImJoy --platform=linux --arch=x64 --icon=./asserts/imjoy --prune=true --out=./build --overwrite"
  },
  "repository": "https://github.com/oeway/ImJoy",
  "keywords": [
    "ImJoy"
  ],
  "author": "Wei OUYANG",
  "license": "MIT",
  "devDependencies": {
    "electron": "^3.0.4",
    "electron-packager": "^12.2.0"
  },
  "dependencies": {
    "electron-progressbar": "^1.1.0"
  }
}
